<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    >

    <ImageView
        android:id="@id/iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/rl"
        android:layout_margin="7dip"
        >
        <com.example.henryzheng.ccimageshare.test.TestTextView

            android:id="@+id/tv0"
           style="@style/TextViewStyle1"
            android:text="Dec"
            android:fontFamily="sans-serif"
            android:textSize="40sp"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/tv0"
            android:layout_alignBottom="@id/tv0"
            android:layout_marginLeft="4dip"
            >
            <com.example.henryzheng.ccimageshare.test.TestTextView
                android:id="@id/tv1"
                style="@style/TextViewStyle1"
                android:text="Dec"
                android:textSize="11sp"
                />
            <com.example.henryzheng.ccimageshare.test.TestTextView
                android:id="@id/tv2"
                style="@style/TextViewStyle1"

                android:text="Wednesday"
                android:textSize="11sp"
                />
        </LinearLayout>

    </RelativeLayout>
    <TextView
        style="@style/TextViewStyle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl"
        android:id="@+id/tv3"
        android:textSize="15sp"
        android:layout_marginLeft="7dip"
        android:text="只是那天阳光正好"/>

    <ProgressBar
        android:id="@id/pb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/iv"
        android:layout_alignParentBottom="true" />
    <ImageView
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_centerInParent="true"
        android:id="@+id/load"
        android:background="@drawable/load"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="7dip"
        >
        <ImageView
            android:id="@id/iv0"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/h4"
            android:layout_height="@dimen/h4"
            android:layout_toLeftOf="@id/tv4"
            android:src="@drawable/icon_flower"/>
        <TextView
            android:gravity="center"
            style="@style/TextViewStyle1"
            android:id="@id/tv4"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="34213"
            android:textSize="16sp"
            />
    </RelativeLayout>
</RelativeLayout>
